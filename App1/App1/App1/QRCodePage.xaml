<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.QRCodePage"
             Title="Scan QR Code">
  

<StackLayout VerticalOptions="Center">
  <Label Text="QR Code Getter" HorizontalTextAlignment="Center"></Label>
  <Image Source="qrcode.jpg"></Image>
 
<Button Text="Scan QR Code" x:Name="BtnScanQrCode" Clicked="BtnScanQrCode_OnClicked" />
</StackLayout>
  
</ContentPage>